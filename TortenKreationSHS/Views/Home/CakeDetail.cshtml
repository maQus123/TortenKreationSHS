@model TortenKreationSHS.Models.Cake

@{
    ViewData["Title"] = Model.Title + " - TortenKreation SHS";
    ViewData["MetaDescription"] = Model.Title + ". " + Model.Description;
}
<div class="container">
    <div class="row">
        <div class="col grey-text">
            <div class="section">
                <h1 class="text-darken-3">@Model.Title</h1>
                <p class="text-darken-2 flow-text">@Model.Description</p>
                <p>@Model.GetPrettyDate()</p>
                <div class="divider"></div>
            </div>
            <div class="row">
                @for (int i = 0; i < @Model.Images.Count; i++) {
                    <div class="col s12 m6">
                        <div class="card card-small">
                            <div class="card-image">
                                <img class="materialboxed responsive-img" src="~/img/detail/@Model.Images[i].Path" data-caption="@Model.Title" alt="@Model.Title">
                            </div>
                        </div>                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>